{
    "name": "remill-template",
    "image": "ghcr.io/llvmparty/remill-template/dependencies:22.04-llvm19.1.7-remill6.0.0",
    "customizations": {
        "vscode": {
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
